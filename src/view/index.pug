doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        link(href='https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css' rel='stylesheet')
        link(href='../style/index.css' rel='stylesheet')
    body
        div.blc
            // 工具栏
            div.bg-warning.blc-tools
                div.form-inline
                    label(for='inputRoomName') 输入直播间名称：
                    input.form-control#inputRoomName(type='text')
                    label(for='inputRoomId') 输入直播间ID：
                    input.form-control#inputRoomId(type='text')
                    input.btn.btn-default#saveRoomData(type='button' value='保存')
                    span.blc-tools-tishi#tiShi
            // 显示数据
            div.blc-data
                table.table.table-bordered.table-hover.blc-table
                    thead
                        tr.bg-info
                            th.blc-table-td0 直播间名称
                            th.blc-table-td1 直播间ID
                            th.blc-table-td2 操作
                    tbody#roomList
        script(src='https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js')
        script(src='../script/common/IndexedDB.js')
        script(src='../script/options.js')
        script(src='../script/initDB.js')
        script(src='../script/initView.js')
        script(src='../script/saveData.js')
        script(src='../script/index.js')